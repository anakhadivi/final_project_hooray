<div id='posts_show_links'>
	<nav>
			<ul>
				<li>
					<%=link_to 'My Account', user_path(current_user)%>
				</li>
				<li>
					<%=link_to 'View BladerSpots', posts_path%>
				</li>
				<li>
					<%=link_to 'Create New Spot', new_post_path%>
				</li>
				<li>
					<%=link_to 'Sign Out', destroy_user_session_path, method: :delete%>
				</li>
			</ul>
		</nav>
</div>
<h1 id='h1_show'>
<%=@post.location%>
</h1>
<div id='single_post'>
Notes: <%=@post.notes%>
<br>
<%=@post.best_at%>
<%=image_tag @post.image.url, size: '400x400'%>
<br>
Spotted By: <%=@post.user.email%>
<br>
</div>
<div id ='show_comments'>
	<%@comments.each do |comment|%>
	<div id='single_comment'>
		<i><%=comment.user.email%></i>: <%=comment.review%><br>
	</div>
	<%end%>
</div>
<div id = 'new_comment_form'>
<%=simple_form_for [@post,@comment] do |f|%>
	<%=f.input :review, :label => 'Comment'%>
	<%=f.button :submit, :label => 'Post Comment' %>
<%end%>
</div>
